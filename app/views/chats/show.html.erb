      <h2><%= @user.name %> さんとのチャット</h2>
      
      <table class="message table">
      <% @chats.each do |chat| %>
       <% if chat.user_id == current_user.id %>
       <tbody>
        <tr>
         <th>
          <p><%= chat.message %></p>
         </th>
         <th></th>
        </tr>
       <% else %>
        <tr>
           
        </tr>
       </tbody>
      </table>
    </div>
  </div>
</div>