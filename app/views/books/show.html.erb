<!DOCTYPE>
<html lang"ja">
 <meta charset="UTF-8">
 <link rel="Stylesheet">
 <body>
  <main>

   <p id="notice"></p>
   <div class="container">
    <div class="row">
     <div class="col-md-3">
      <%= render "users/user_info", user: @user %>
      <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block", method: :get do %>
       <i class="fas fa-user-cog"></i>
      <% end %>
      <%= render "books/list", book: @newbook %>
     </div>

     <div class="col-md-8 offset-md-1">
      <%= render "searches/search" %>
      <h2>Book detail</h2>

       <table class="table">
        <tbody>
         <tr>
          <td>
           <%= link_to user_path(@book.user.id) do %>
            <%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size:"40x40" %><br>
            <%= @book.user.name %>
           <% end %>
          </td>
          <td>
           <%= link_to book_path(@book.id) do %>
           <%= @book.title %>
           <% end %>
          </td>
          <td>
           <%= @book.body %>
          </td>
          <td id="favorite_buttons_<%= @book.id %>">
           <%= render "favorites/favorite", book: @book %>
          </td>
          <td>
           <%= "コメント数： #{@book.book_comments.count}" %>
          </td>
          <td>
           <% if @book.user_id == current_user.id%>
           <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success text-white"  %>
           <% end %>
          </td>
          <td>
           <% if @book.user_id == current_user.id%>
            <%= link_to "Destroy", book_path(@book.id), class: "btn btn-sm btn-danger text-white", method: :delete %>
           <% end %>
          </td>
         </tr>
        </tbody>
       </table>
        <div class="comments">
         <p>コメント件数：<%= @book.book_comments.count %></p>
         <% @book.book_comments.each do |book_comment| %>
         <div class="table2">
          <tr>
           <td>
            <%=  attachment_image_tag @book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size:"40x40" %>
           </td>
           <td><%= book_comment.comment %></td>
           <td>
            <% if book_comment.user == current_user %>
             <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), class: "btn btn-sm btn-danger text-white", method: :delete %>
            <% end %>
           </td>
          <tr>
         </div>
           <%= link_to user_path(@book.user.id) do %>
            <%= book_comment.user.name %>
           <% end %>
          <% end %>
        </div>
        <div class="new-comment">
        <%= form_with(model:[@book, @book_comment], local: true) do |f| %>
         <%= f.text_area :comment, class: "form-control" %>
         <%= f.submit "送信" %>
        <% end %>
     </div>
     </div>
    </div>
   </div>
  </main>
 </body>
</html>