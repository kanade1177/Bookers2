<!DOCTYPE>
<html lang"ja">
 <meta charset="UTF-8">
 <link rel="Stylesheet">
 <body>
  <main>
   <div class="container">
    <div class="row">
     <div class="col-md-3">
      <%= render "users/user_info", user: @user %>
      <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block", method: :get do %>
       <i class="fas fa-user-cog"></i>
      <% end %>
      <%= render "books/list", book: @book %>
     </div>

     <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>

       <table class="table">
        <tbody>
         <tr>
          <td>
           <%= link_to user_path(@book.user.id) do %>
            <%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size:"40x40" %><br>
            <%= @book.user.name %>
           <% end %>
          </td>
          <td>
           <%= link_to book_path(@book.id) do %>
           <%= @book.title %>
           <% end %>
          </td>
          <td>
           <%= @book.body %>
          </td>
          <td>
           <% if @book.user_id == current_user.id%>
           <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success text-white"  %>
           <% end %>
          </td>
          <td>
           <% if @book.user_id == current_user.id%>
            <%= link_to "Destroy", book_path(@book.id), class: "btn btn-sm btn-danger text-white", method: :delete %>
           <% end %>
          </td>
         </tr>
        </tbody>
       </table>
     </div>
    </div>
   </div>
  </main>
 </body>
</html>