<>
 <body>



 <h1>Books</h1>

 <table>
  <thead>
   <tr>
     <th>Title</th>
     <th>Body</th>
     <th colspan="3"></th>
   </tr>
  </thead>

   <% @books.each do |book| %>
  <tbody>
    <tr>
     <td>
      <%= link_to user_path(book.user.id) do %>
       <%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
      <% end %>
     </td>
     <td>

      <%= link_to book_path(book.id) do %>
      <%= book.title  %>
      <% end %>
     </td>
     <td><%= book.body %></td>
    <tr>
  </tbody>
  <% end %>
 </table>

 <%= render "books/list", book: @book %>
 </body>
</html>
