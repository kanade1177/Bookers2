<!DOCTYPE>
<html lang"ja">
 <head>
  <meta charset="UTF-8">
   <link rel="Stylesheet" href="top.scss">
   <title>UsersShow</title>
 <body>

<div class="profile-container">
 <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>

  <h3 class="profile-name">name <%= @user.name %></h3>
  <h3 class="profile-intoroduction">introduction <%= @user.introduction %></h3>
</div>

 <table>
  <thead>
   <tr>
     <th>Title</th>
     <th>Body</th>
     <th colspan="3"></th>
   </tr>
  </thead>
   <% @books.each do |book| %>
  <tbody>
    <tr>
     <td>

     <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>

     </td>
     <td>
      <%= link_to book_path(book.id) do %>
      <%= book.title  %>
      <% end %>
     </td>
     <td><%= book.body %></td>
    <tr>
  </tbody>
  <% end %>
 </table>