<!DOCTYPE>
<html lang"ja">
 <head>
  <meta charset="UTF-8">
   <link rel="Stylesheet">

 <body>
  <main>
  <p id="notice"></p>
   <div class="container">
    <div class="row">
     <div class="col-md-3">

      <% if flash[:notice] %>
     　<p id="notice">
       <%= flash[:notice] %>
     　</p>
   　　<% end %>

      <%= render "users/user_info", user: @user %>

       <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block", method: :get do %>
        <i class="fas fa-user-cog"></i>
       <% end %>

      <%= render "books/list", book: @book %>
     </div>
     
     <div class="col-md-8 offset-md-1">
      <h2>Books</h2>

       <table class="table">
        <thead>
         <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
         </tr>
        </thead>
        <% @books.each do |book| %>
        <tbody>
         <tr>
          <td>
           <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size:"40x40" %>
          </td>
          <td>
           <%= link_to book_path(book.id) do %>
           <%= book.title  %>
           <% end %>
          </td>
          <td><%= book.body %></td>
         <tr>
        </tbody>
        <% end %>
       </table>

     </div>
    </div>
   </div>
  </main>
 </body>
</html>